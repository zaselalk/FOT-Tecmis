<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fottecmis.Admin.AdminNotice.AdminNoticeViewController">
   <Text layoutX="282.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Notice"/>

   <Button layoutX="52.0" layoutY="18.0" mnemonicParsing="false" onAction="#showAdminDashboard" text="Back"/>
   <TableView fx:id="admin_notice_tview" layoutX="34.0" layoutY="124.0" prefHeight="409.0" prefWidth="583.0"/>
   <AnchorPane fx:id="notice_editor" layoutX="711.0" layoutY="87.0" prefHeight="497.0" prefWidth="372.0">
      <children>
         <Text fx:id="notice_editor_text" layoutX="108.0" layoutY="38.0" strokeType="OUTSIDE" strokeWidth="0.0"
               text="New Notice">
            <font>
               <Font size="21.0"/>
            </font>
         </Text>
         <Label layoutX="32.0" layoutY="155.0" text="Title"/>
         <TextField fx:id="notice_title" layoutX="32.0" layoutY="183.0" prefHeight="34.0" prefWidth="308.0"/>
         <TextArea fx:id="notice_description" layoutX="32.0" layoutY="258.0" prefHeight="157.0" prefWidth="308.0"/>
         <Label layoutX="32.0" layoutY="228.0" text="Description"/>
         <Button fx:id="notice_post" layoutX="34.0" layoutY="440.0" mnemonicParsing="false"
                 onAction="#actionButtonHandler" prefHeight="34.0" prefWidth="120.0" text="Update"/>
         <Button layoutX="253.0" layoutY="84.0" mnemonicParsing="false" onAction="#deleteNotice" prefHeight="34.0"
                 prefWidth="87.0" text="Delete"/>
      </children>
   </AnchorPane>
   <Button fx:id="notice_new" layoutX="1012.0" layoutY="24.0" mnemonicParsing="false" onAction="#showNewNotice"
           prefHeight="34.0" prefWidth="120.0" text="New"/>
   <Label fx:id="feedback" layoutX="32.0" layoutY="87.0" prefHeight="16.0" prefWidth="583.0" text="Feedabck"/>

</AnchorPane>
